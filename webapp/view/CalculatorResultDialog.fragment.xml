<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Dialog
        id="calculatorResultDialog"
        title="Calculator result">
        <content>
            <core:Icon
                src="sap-icon://positive"
                size="1rem"
                class="sapUiSmallMargin"/>
            <Text
                text="The result is {/calculator/result}" />
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>