<mvc:View
    controllerName="sap.ui.bojzi.learning.controller.CalculatorPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        headerText="{i18n>calculatorPanelTitle}"
        class="sapUiResponsiveMargin"
        width="auto">
        <content>
            <Text
                text="First value"
                class="sapUiSmallMarginEnd myCustomText" />
            <Input
                value="{/calculator/first}"
                valueLiveUpdate="true"
                width="15%"
                class="sapUiLargeMarginEnd" />
            <Text
                text="Second value"
                class="sapUiSmallMarginEnd myCustomText" />
            <Input
                value="{/calculator/second}"
                valueLiveUpdate="true"
                width="15%"
                class="sapUiLargeMarginEnd" />
            <Button
                icon="sap-icon://simulate"
                text="{i18n>calculateButtonText}"
                press=".onCalculate" />
        </content>
    </Panel>
</mvc:View>